  <h1>Add New Product</h1>
<form action="/products" method="POST">

  <div class="row d-flex">
    <div class="form-group  col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
      <label for="exampleInputName">Name</label>
      <input name="productname" type="text" class="form-control" id="exampleInputName"  placeholder="Enter Product Name">
    </div>
      <div class="form-group  col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
        <label for="exampleInputUnique">Unique Name</label>
        <input name="uniquename" type="text" class="form-control" id="exampleInputUnique"  placeholder="Enter Unique Name">
      </div>
    </div>

<!--price-->
<div class="row d-flex">
    <div class="form-group  col-12 col-sm-12 col-md-12 col-lg-4 col-xl-6">
      <label for="exampleInputPrice">Price</label>
      <input name="price" type="number" class="form-control" id="exampleInputPrice"  placeholder="Enter Product Price">
    </div>

    
  
    <div class="form-group  col-12 col-sm-12 col-md-12 col-lg-4 col-xl-6">
